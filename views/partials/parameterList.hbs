{{#if parameters}}
    <div class="parameters">
        {{#each parameters}}
            {{#if type.number}}
                {{> input }}
            {{/if}}
            {{#if type.string}}
                {{> input }}
            {{/if}}
            {{#if type.boolean}}
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="{{name}}" name="{{name}}" value="true">
                    <label class="form-check-label" for="{{name}}">{{label}}</label>
                </div>
            {{/if}}
            {{#if type.other}}
                <div class="error">dont know this one: {{type._specified}}</div>
            {{/if}}
        {{/each}}
    </div>
{{/if}}
